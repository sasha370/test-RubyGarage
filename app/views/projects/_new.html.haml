= form_with(model: Project.new, remote: true, class: "needs-validation") do |form|
  .input-group
    = form.text_field :name, class: "form-control", placeholder: "Название проекта",  :classes  => "task_input_field", :as => :input, minlength: "3", maxlength: "90"

    .input-group-append
      = form.submit class: "btn btn-success "
%p
